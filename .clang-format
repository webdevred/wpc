BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never
BreakBeforeBraces: Attach

BraceWrapping:
  AfterFunction: false
  AfterControlStatement: MultiLine
  AfterStruct: false
  AfterEnum: false
  AfterClass: false

ColumnLimit: 80
AllowShortIfStatementsOnASingleLine: WithoutElse
AlignAfterOpenBracket: Align
SpacesBeforeTrailingComments: 1
IndentPPDirectives: BeforeHash
